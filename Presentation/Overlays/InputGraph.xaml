<Window x:Name="inputGraphWindow" x:Class="Presentation.Overlays.InputGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Presentation.Overlays"
    xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    mc:Ignorable="d"
    Title="InputGraph"
    Height="150" Width="400"
    WindowStyle="None" ResizeMode="CanResizeWithGrip"
    AllowsTransparency="True" Topmost="True"
    MouseDown="Window_MouseDown"
    Background="Transparent">
    <Grid Background="Transparent"
    >
        <ScottPlot:WpfPlot x:Name="InputPlot" />
        <Canvas>
            <StackPanel Orientation="Horizontal" Background="Transparent" Canvas.Left="10"
                Canvas.Top="10">
                <Label x:Name="BrakePercentage" Background="Transparent" FontSize="32" />
                <Label x:Name="ThrottlePercentage" Background="Transparent" FontSize="32"
                    Margin="10,0,0,0" />
                <Label x:Name="ClutchPercentage" Background="Transparent" FontSize="32"
                    Margin="10,0,0,0" />
                <Label x:Name="SteeringPercentage" Background="Transparent" FontSize="32"
                    Margin="10,0,0,0" />
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
