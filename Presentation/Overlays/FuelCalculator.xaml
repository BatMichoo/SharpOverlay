<Window x:Class="Presentation.Overlays.FuelCalculatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Core.Models;assembly=Core"
    d:DataContext="{d:DesignInstance Type=models:FuelViewModel}"
    mc:Ignorable="d"
    Title="Fuel Calculator" Height="100" Width="230"
    WindowStyle="None"
    FontFamily="pack://application:,,,/Presentation.Fonts;component/Fonts/#EurostileExtendedBlack"
    AllowsTransparency="True"
    Background="Transparent"
>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="12"
            CaptionHeight="0"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"
        />
    </WindowChrome.WindowChrome>

    <Border Style="{StaticResource OuterBorderStyle}"
        MouseLeftButtonDown="Window_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.25*" />
                <ColumnDefinition Width="1.25*" />
            </Grid.ColumnDefinitions>

            <!-- First Row: Fuel and Race Laps Labels and Values -->
            <Label Content="FUEL" Style="{StaticResource LabelStyle}" />
            <TextBlock Grid.Column="1" Text="{Binding CurrentFuelLevel, StringFormat=N2}"
                Style="{StaticResource TextBlockStyle}" />
            <Label Grid.Column="2" Content="LAP REM" Style="{StaticResource LabelStyle}" />
            <TextBlock Grid.Column="3" Text="{Binding RaceLapsRemaining, StringFormat=N2}"
                Style="{StaticResource TextBlockStyle}" />

            <!-- Second Row: Column Headers -->
            <Label Grid.Row="1" Content="" Style="{StaticResource LabelStyle}" />
            <Label Grid.Row="1" Grid.Column="1" Content="AVG"
                Style="{StaticResource LabelStyle}" />
            <Label Grid.Row="1" Grid.Column="2" Content="REFUEL"
                Style="{StaticResource LabelStyle}" />
            <Label Grid.Row="1" Grid.Column="3" Content="LAPS FUEL"
                Style="{StaticResource LabelStyle}" />

            <!-- Third Row: Values and Avg Label -->
            <Label Grid.Row="2" Content="{Binding Strategies[0].Name}"
                Style="{StaticResource LabelStyle}" />
            <TextBlock Grid.Row="2" Grid.Column="1"
                Text="{Binding FuelConsumption, StringFormat=N2}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[0]}" />
            <TextBlock Grid.Row="2" Grid.Column="2"
                Text="{Binding RefuelAmount, StringFormat={}{0:F2}}"
                Style="{StaticResource RefuelRequiredTextBlockStyle}"
                DataContext="{Binding Strategies[0]}" />
            <TextBlock Grid.Row="2" Grid.Column="3"
                Text="{Binding LapsOfFuelRemaining, StringFormat={}{0:F2}}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[0]}" />

            <!-- Fourth Row: Values and Avg Label -->
            <Label Grid.Row="3" Content="{Binding Strategies[1].Name}"
                Style="{StaticResource LabelStyle}" />
            <TextBlock Grid.Row="3" Grid.Column="1"
                Text="{Binding FuelConsumption, StringFormat=N2}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[1]}" />
            <TextBlock Grid.Row="3" Grid.Column="2"
                Text="{Binding RefuelAmount, StringFormat={}{0:F2}}"
                Style="{StaticResource RefuelRequiredTextBlockStyle}"
                DataContext="{Binding Strategies[1]}" />
            <TextBlock Grid.Row="3" Grid.Column="3"
                Text="{Binding LapsOfFuelRemaining, StringFormat={}{0:F2}}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[1]}" />

            <!-- Fifth Row: 5L Data -->
            <Label Grid.Row="4" Content="{Binding Strategies[2].Name}"
                Style="{StaticResource LabelStyle}" />
            <TextBlock Grid.Row="4" Grid.Column="1"
                Text="{Binding FuelConsumption, StringFormat=N2}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[2]}" />
            <TextBlock Grid.Row="4" Grid.Column="2"
                Text="{Binding RefuelAmount, StringFormat={}{0:F2}}"
                Style="{StaticResource RefuelRequiredTextBlockStyle}"
                DataContext="{Binding Strategies[2]}" />
            <TextBlock Grid.Row="4" Grid.Column="3"
                Text="{Binding LapsOfFuelRemaining, StringFormat={}{0:F2}}"
                Style="{StaticResource TextBlockStyle}" DataContext="{Binding Strategies[2]}" />
        </Grid>
    </Border>
</Window>
