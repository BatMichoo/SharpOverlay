<UserControl x:Class="Presentation.Models.Views.BarSpotterSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    x:Name="BarSpotter_SettingsView">

    <UserControl.Resources>
        <ResourceDictionary Source="/Presentation;component/Styling/BarSpotterView.xaml" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Active" Style="{StaticResource TextBlockStyle}"/>
        <ToggleButton x:Name="BarSpotterIsActiveButton"
            Grid.Row="0" Grid.Column="1"
            IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Positioning Mode" Style="{StaticResource TextBlockStyle}"/>
        <ToggleButton x:Name="TestModeToggle" Grid.Row="1" Grid.Column="1"
            ToolTip="Toggle to render the bars and position them"
            IsChecked="{Binding IsInTestMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Bar Width" Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal"
            VerticalAlignment="Center" Margin="5,0">
            <TextBox
                Foreground="{StaticResource PrimaryTextBrush}"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Text="{Binding Path=BarWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="40" Margin="10,0,10,0"
            />
            <Slider x:Name="BarWidthSlider"
                Value="{Binding Path=BarWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Minimum="1"
                Maximum="100"
                TickFrequency="1"
                IsSnapToTickEnabled="True" HorizontalAlignment="Right" Margin="10,0,0,0"
            />
        </StackPanel>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bar Length" Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal"
            VerticalAlignment="Center" Margin="5,0">
            <TextBox
                Foreground="{StaticResource PrimaryTextBrush}"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Text="{Binding Path=BarLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="40" Margin="10,0,10,0"
            />
            <Slider x:Name="BarLengthSlider"
                Value="{Binding Path=BarLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Minimum="1"
                Maximum="300"
                TickFrequency="1"
                IsSnapToTickEnabled="True" HorizontalAlignment="Right" Margin="10,0,0,0"
            />
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0" x:Name="BarColor" Text="Bar Color" Style="{StaticResource TextBlockStyle}"/>
        <colorpicker:PortableColorPicker Grid.Row="4" Grid.Column="1" SmallChange="5"
            UseHintColor="True" HintColor="Transparent"
            SelectedColor="{Binding BarColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
            ShowFractionalPart="False"
            ShowAlpha="True" />

        <TextBlock Grid.Row="5" Grid.Column="0" x:Name="ThreeWideColor" Text="3 Wide Bar Color" Style="{StaticResource TextBlockStyle}"/>
        <colorpicker:PortableColorPicker Grid.Row="5" Grid.Column="1" SmallChange="5"
            UseHintColor="True" HintColor="Transparent"
            SelectedColor="{Binding ThreeWideBarColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
            ShowFractionalPart="False"
            ShowAlpha="True" />

    </Grid>
</UserControl>
