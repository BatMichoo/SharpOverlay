<UserControl x:Class="Presentation.Models.Views.FuelCalcSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    x:Name="FuelCalcRoot">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Text="Active" Style="{StaticResource TextBlockStyle}"/>
        <ToggleButton x:Name="FuelCalculatorToggleButton"
            Grid.Column="1"
            IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Positioning Mode" Style="{StaticResource TextBlockStyle}"/>
        <ToggleButton x:Name="FuelCalcTestToggleButton"
            Grid.Row="1"
            Grid.Column="1"
            IsChecked="{Binding IsInTestMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Debug" Style="{StaticResource TextBlockStyle}"/>
        <ToggleButton x:Name="FuelDebugModeToggle" Grid.Row="2" Grid.Column="1"
            ToolTip="Toggle to render the debug fuel View"
            IsChecked="{Binding IsInDebugMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Background Color - WIP" Style="{StaticResource TextBlockStyle}"/>
        <colorpicker:PortableColorPicker Grid.Row="3" Grid.Column="1"
            SmallChange="5"
            UseHintColor="True" HintColor="Transparent"
            SelectedColor="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
            ShowFractionalPart="False"
            ShowAlpha="True" />

    </Grid>
</UserControl>
