<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settings="clr-namespace:Presentation.Models"
                    xmlns:views="clr-namespace:Presentation.Models.Views">

    <DataTemplate DataType="{x:Type settings:GeneralSettings}">
        <views:GeneralSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type settings:BarSpotterSettings}">
        <views:BarSpotterSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type settings:FuelSettings}">
        <views:FuelCalcSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type settings:InputGraphSettings}">
        <views:InputGraphSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type settings:WindSettings}">
        <views:WindSettingsView />
    </DataTemplate>

</ResourceDictionary>
