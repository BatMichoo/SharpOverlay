<UserControl x:Class="Presentation.Models.Views.InputGraphSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    x:Name="InputGraphRoot">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource TextBlockStyle}"
                Text="Active" />
            <ToggleButton x:Name="InputGraphToggleButton"
                Grid.Row="0" Grid.Column="1"
                IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Positioning Mode" Style="{StaticResource TextBlockStyle}"/>
            <ToggleButton x:Name="InputGraphTestToggleButton"
                Grid.Row="1"
                Grid.Column="1"
                IsChecked="{Binding IsInTestMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Background Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="2" Grid.Column="1"
                SmallChange="5"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
                ShowFractionalPart="False"
                ShowAlpha="True" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Throttle Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="3" Grid.Column="1"
                SmallChange="5"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding ThrottleColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
                ShowFractionalPart="False" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Brake Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="4" Grid.Column="1"
                SmallChange="5"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding BrakeColor, Converter={StaticResource BrushToColorConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ShowFractionalPart="False"
                ShowAlpha="True" />

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Clutch Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="5" Grid.Column="1"
                SmallChange="5"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding ClutchColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
                ShowFractionalPart="False"
                ShowAlpha="True" />

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Steering Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="6" Grid.Column="1"
                SmallChange="5"
                FontSize="12"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding SteeringColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
                ShowFractionalPart="False"
                ShowAlpha="True" />

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Line Width" Style="{StaticResource TextBlockStyle}"/>
            <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal"
                VerticalAlignment="Center" Margin="5,0">
                <TextBox
                    Foreground="{StaticResource PrimaryTextBrush}"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Text="{Binding Path=LineWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Width="40" Margin="10,0,10,0"
                />
                <Slider x:Name="inputGraph_lineWidthSlider"
                    Maximum="10"
                    Minimum="1"
                    Value="{Binding LineWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TickFrequency="1.0"
                    IsEnabled="{Binding IsEnabled, Mode=OneWay}" />
            </StackPanel>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="Show Clutch" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="8" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowClutch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="9" Grid.Column="0" Text="Show Steering" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="9" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowSteering, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="10" Grid.Column="0" Text="Raw Values" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="10" Grid.Column="1"
                Content=""
                IsChecked="{Binding UseRawValues, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="11" Grid.Column="0" Text="Show ABS" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="11" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowABS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="12" Grid.Column="0" Text="ABS Flash" Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Grid.Row="13" Grid.Column="0" Text="ABS Color" Style="{StaticResource TextBlockStyle}"/>
            <colorpicker:PortableColorPicker Grid.Row="13" Grid.Column="1"
                SmallChange="5"
                UseHintColor="True" HintColor="Transparent"
                SelectedColor="{Binding ABSColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BrushToColorConverter}}"
                ShowFractionalPart="False"
                ShowAlpha="True" />

            <TextBlock Grid.Row="14" Grid.Column="0" Text="Show Throttle %" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="14" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowPercentageThrottle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="15" Grid.Column="0" Text="Show Brake %" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="15" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowPercentageBrake, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="16" Grid.Column="0" Text="Show Clutch %" Style="{StaticResource TextBlockStyle}"/>
            <CheckBox Grid.Row="16" Grid.Column="1"
                Content=""
                IsChecked="{Binding ShowPercentageClutch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding IsEnabled, Mode=OneWay}" />
        </Grid>
    </ScrollViewer>
</UserControl>
