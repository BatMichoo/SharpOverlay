<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Colors -->
    <Color x:Key="PrimaryText">#FFD9D9DB</Color>
    <Color x:Key="SecondaryText">#FFB4B4B7</Color>
    <Color x:Key="Background">#FF05050F</Color>
    <Color x:Key="BackgroundAccent">#FF12121B</Color>
    <Color x:Key="BorderColor">#FF3E3E3E</Color>
    <Color x:Key="BorderAccentColor">#FF5A5A5A</Color>
    <Color x:Key="ActiveButton">#FF5A5A5A</Color>
    <Color x:Key="Warning">#ff3c3c</Color>
    <Color x:Key="WarningAccent">#ff2828</Color>
    <Color x:Key="Green">#FF33CC00</Color>
    <Color x:Key="Red">#FFE1251B</Color>


    <Color x:Key="OverlayPanel">#FF12121B</Color>
    <Color x:Key="AccentYellow">#FFD900</Color>
    <Color x:Key="DarkGray">#FF3E3E3E</Color>
    <Color x:Key="BorderShadow">#00000080</Color>
    <Color x:Key="SliderTrack">#3A3A49</Color>
    <Color x:Key="SliderFill">#BFBFBF</Color>
    <Color x:Key="ToggleOn">#008CFF</Color>
    <Color x:Key="ToggleOff">#E0E0E0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryText}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryText}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="BackgroundAccentBrush" Color="{StaticResource BackgroundAccent}" />
    <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderAccentColorBrush" Color="{StaticResource BorderAccentColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="WarningAccentBrush" Color="{StaticResource WarningAccent}" />
    <SolidColorBrush x:Key="ActiveButtonBrush" Color="{StaticResource ActiveButton}" />
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}" />
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}" />

    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}" />
    <SolidColorBrush x:Key="OverlayPanelBrush" Color="{StaticResource OverlayPanel}" />
    <SolidColorBrush x:Key="SliderTrackBrush" Color="{StaticResource SliderTrack}" />
    <SolidColorBrush x:Key="SliderFillBrush" Color="{StaticResource SliderFill}" />
    <SolidColorBrush x:Key="ToggleOnBrush" Color="{StaticResource ToggleOn}" />
    <SolidColorBrush x:Key="ToggleOffBrush" Color="{StaticResource ToggleOff}" />

    <!-- Optional Shadow for Borders -->
    <DropShadowEffect x:Key="WindowShadow"
        Color="Black"
        BlurRadius="10"
        Opacity="0.4"
        Direction="270"
        ShadowDepth="4" />

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
